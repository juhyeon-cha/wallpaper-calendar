{
    "prettier.printWidth": 200,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "prettier.semi": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "editor.quickSuggestions": {
        "strings": true
    },
    "files.eol": "\n",
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
